<Window x:Class="GameStore.SubmitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameStore"
        mc:Ignorable="d"
        Title="Подтверждение покупки" Height="150" Width="300">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Center">
            <TextBlock Margin="5" Text="Укажите Ваш адрес электронной почты:"/>
            <TextBox Margin="5"/>
            <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Отмена" Margin="5" Width="80"/>
                <Button Content="Оплатить" Margin="5" Width="80"/> 
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
