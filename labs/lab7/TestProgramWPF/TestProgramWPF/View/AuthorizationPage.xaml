<Page x:Class="TestProgramWPF.View.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestProgramWPF.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">
    <StackPanel VerticalAlignment="Center" Width="300">
        <Page Content=""/>
        <TextBlock Text="Логин" TextAlignment="Center"/>
        <TextBox x:Name="LoginTextBox"/>
        <TextBlock Text="Пароль" TextAlignment="Center"/>
        <PasswordBox x:Name="PasswordBox"/>
        <Button x:Name="SignInButton" Content="Войти"/>
    </StackPanel>
</Page>
