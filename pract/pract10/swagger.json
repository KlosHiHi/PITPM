{
  "openapi": "3.0.1",
  "info": {
    "title": "Задачи",
    "description": "API позволяет управлять списком задач.",
    "contact": {
      "name": "Гидрид Калия",
      "url": "https://youtube.com/@kl0shi",
      "email": "vav420@gmail.com"
    },
    "license": {
      "name": "Данное API распространняется по лиценции LGPL-3",
      "url": "https://ru.wikipedia.org/wiki/GNU_Lesser_General_Public_License"
    },
    "version": "v1"
  },
  "paths": {
    "/health": {
      "get": {
        "tags": [
          "API health"
        ],
        "summary": "Проверка состояния работы API",
        "description": "Если ответ не получен -> значит API не работает",
        "operationId": "ShowApi",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/tasks": {
      "get": {
        "tags": [
          "ShowListOgTask"
        ],
        "summary": "Получение задач внутри временного диапазона",
        "description": "Пишите начальную и конечную дату диапазона, и получаете список задач.",
        "operationId": "TakeTasks",
        "parameters": [
          {
            "name": "start",
            "in": "query",
            "required": true,
            "style": "form",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "end",
            "in": "query",
            "required": true,
            "style": "form",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "start",
            "description": "начало диапазона дат",
            "style": "simple",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "end",
            "description": "конец диапазона дат",
            "style": "simple",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/Task": {
      "get": {
        "tags": [
          "Task"
        ],
        "summary": "Получение списка задач",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TaskModel"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TaskModel"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TaskModel"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Task"
        ],
        "summary": "Добавление задачи в список",
        "description": "",
        "requestBody": {
          "description": "Добавляемая задача",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TaskModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/TaskModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/TaskModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "201": {
            "description": "Успешное добавление объекта"
          },
          "400": {
            "description": "В указанном диапазоне нет элементов"
          }
        }
      }
    },
    "/api/Task/{id}": {
      "get": {
        "tags": [
          "Task"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Успешное выполнение",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TaskModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskModel"
                }
              }
            }
          },
          "404": {
            "description": "Объекта с указанные ID нет"
          }
        }
      },
      "put": {
        "tags": [
          "Task"
        ],
        "summary": "Изменение объекта",
        "description": "Пример запроса\r\n{\r\n    \"taskId\": 0,\r\n    \"name\": \"string\",\r\n    \"description\": \"string\",\r\n    \"executionTime\": \"2025-12-15T12:15:38.157Z\",\r\n    \"status\": 0\r\n}",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id изменяемого объекта",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "description": "объект с новыми данными",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TaskModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/TaskModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/TaskModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Объект изменён"
          },
          "404": {
            "description": "В указанном диапазоне нет элементов"
          }
        }
      },
      "delete": {
        "tags": [
          "Task"
        ],
        "summary": "Удаление задачи по id",
        "description": "Будьте осторожны, удалённые объекты вовзрату не подлежат!!!",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id удаляемого объекта",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Объект удалён"
          },
          "404": {
            "description": "Объекта с указанным Id нет в списке"
          }
        }
      }
    },
    "/api/Task/{startDate}&{endDate}": {
      "get": {
        "tags": [
          "Task"
        ],
        "parameters": [
          {
            "name": "startDate",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "endDate",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TaskModel"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TaskModel"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TaskModel"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TaskModel": {
        "type": "object",
        "properties": {
          "taskId": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "executionTime": {
            "type": "string",
            "format": "date-time"
          },
          "status": {
            "$ref": "#/components/schemas/TaskStatus"
          }
        },
        "additionalProperties": false
      },
      "TaskStatus": {
        "enum": [
          0,
          1,
          2,
          3
        ],
        "type": "integer",
        "format": "int32"
      }
    }
  }
}