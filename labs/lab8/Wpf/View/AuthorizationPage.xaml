<Page x:Class="TestWPF.View.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWPF.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">
    <Grid>
        <StackPanel VerticalAlignment="Center" Width="300">
            <TextBlock Text="Логин" TextAlignment="Center" AutomationProperties.AutomationId="LoginTextBlock"/>
            <TextBox x:Name="LoginTextBox" AutomationProperties.AutomationId="LoginTextBox"/>
            <TextBlock Text="Пароль" TextAlignment="Center" AutomationProperties.AutomationId="PasswordTextBlock"/>
            <PasswordBox x:Name="PasswordBox" AutomationProperties.AutomationId="PasswordBox"/>
            <Button x:Name="SignInButton" Content="Войти" Click="SignInButton_Click" AutomationProperties.AutomationId="SignInButton"/>
        </StackPanel>
    </Grid>
</Page>
